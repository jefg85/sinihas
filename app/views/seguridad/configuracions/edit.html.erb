 <%= form_for(@seguridad_configuracion, :validate => true) do |f| %>
 <div class="content-box"> 	
      	<div class="content-header">
        <h3>
        <div class="title-box">
               Editar Configuración 
        </div>  
        <div class="btns-box">
          	<%= f.submit "Guardar" %>    
        </div></h3>
        </div>
        <div class="content"> 
        	<table class="form-table">
        		<tr>
					<td><label>Código:</label></td>
					<td><%= @seguridad_configuracion.codigo %></td>
					<td><label>Nombre:</label></td>
					<td><%= @seguridad_configuracion.nombre %></td>
        		</tr>
        		<tr>
					<td><label>Valor</label></td>
					<td colspan="3"><%= f.text_field :valor, :style =>"width:98%" %></td>									
        		</tr>
        	</table>        
         	
       </div>
</div>     
<% end %>  

